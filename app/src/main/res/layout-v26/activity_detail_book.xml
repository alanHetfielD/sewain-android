<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.detail_book.DetailBookActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/bottom_layout1"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_item_photo"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:scaleType="centerCrop"
                android:layout_marginBottom="4dp"
                android:src="@drawable/books"
                />

            <TextView
                android:id="@+id/tv_book_title"
                style="@style/TextContent.Black"
                android:textSize="24sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                tools:text="Promise - Ketika Janji Menjadi Begitu Berarti" />
            <TextView
                android:id="@+id/tv_book_author"
                style="@style/TextContent.Subtitle"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="LalunaKia" />
            <TextView
                android:id="@+id/tv_book_page_count"
                style="@style/TextContent.Subtitle"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="272 Halaman " />
            <TextView
                android:id="@+id/tv_book_desc"
                style="@style/TextContent.Subtitle"
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:layout_marginTop="8dp"
                tools:text="@string/phone" />
        </LinearLayout>

    </ScrollView>
    <LinearLayout
        android:id="@+id/bottom_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >
        <Button
            android:id="@+id/btn_sewa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/sewa"
            android:textSize="12sp"
            />
    </LinearLayout>
</RelativeLayout>